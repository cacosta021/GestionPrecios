{
  "info": {
    "_postman_id": "0a1b2c3d-4e5f-6789-abcd-ef0123456789",
    "name": "POS - Listas de Precios & Políticas",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {"key": "baseUrl", "value": "http://127.0.0.1:8000/api"},
    {"key": "username", "value": "admin"},
    {"key": "password", "value": "password"},
    {"key": "accessToken", "value": ""},
    {"key": "empresa_id", "value": ""},
    {"key": "sucursal_id", "value": ""},
    {"key": "articulo_id", "value": ""}
  ],
  "item": [
    {
      "name": "Auth - Obtener token",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
        },
        "url": {"raw": "{{baseUrl}}/token/", "host": ["{{baseUrl}}"], "path": ["token",""]}
      },
      "response": []
    },
    {
      "name": "Auth - Refresh token",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {"mode": "raw", "raw": "{\n  \"refresh\": \"{{refreshToken}}\"\n}"},
        "url": {"raw": "{{baseUrl}}/token/refresh/", "host": ["{{baseUrl}}"], "path": ["token","refresh",""]}
      }
    },
    {
      "name": "Calcular precio (POST)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"empresa_id\": \"{{empresa_id}}\",\n  \"sucursal_id\": \"{{sucursal_id}}\",\n  \"articulo_id\": \"{{articulo_id}}\",\n  \"canal\": 1,\n  \"cantidad\": 1,\n  \"monto_pedido\": 0.00\n}"
        },
        "url": {"raw": "{{baseUrl}}/calcular-precio/calcular/", "host": ["{{baseUrl}}"], "path": ["calcular-precio","calcular",""]}
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Solicita token y guarda en variable de colección 'accessToken'",
              "var base = pm.collectionVariables.get('baseUrl') || pm.variables.get('baseUrl');",
              "var url = base + '/token/';",
              "var payload = { username: pm.collectionVariables.get('username'), password: pm.collectionVariables.get('password') };",
              "pm.sendRequest({",
              "  url: url,",
              "  method: 'POST',",
              "  header: { 'Content-Type': 'application/json' },",
              "  body: { mode: 'raw', raw: JSON.stringify(payload) }",
              "}, function (err, res) {",
              "  if (err) { console.log('Error obteniendo token:', err); return; }",
              "  try {",
              "    var json = res.json();",
              "    if (json.access) {",
              "      pm.collectionVariables.set('accessToken', json.access);",
              "      console.log('accessToken guardado (colección)');",
              "    } else {",
              "      console.log('Respuesta token inválida:', json);",
              "    }",
              "  } catch(e) { console.log('No se pudo parsear respuesta de token:', e); }",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Lista vigente (GET)",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
        "url": {"raw": "{{baseUrl}}/calcular-precio/lista_vigente/?empresa_id={{empresa_id}}&sucursal_id={{sucursal_id}}", "host": ["{{baseUrl}}"], "path": ["calcular-precio","lista_vigente",""], "query": [{"key":"empresa_id","value":"{{empresa_id}}"},{"key":"sucursal_id","value":"{{sucursal_id}}"}]}
      }
    },
    {
      "name": "Listas de precios - Listar / Crear",
      "request": {
        "method": "GET",
        "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}],
        "url": {"raw": "{{baseUrl}}/listas-precios/", "host": ["{{baseUrl}}"], "path": ["listas-precios",""]}
      }
    },
    {
      "name": "Reglas precios - Listar / Crear",
      "request": {
        "method": "GET",
        "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}],
        "url": {"raw": "{{baseUrl}}/reglas-precios/", "host": ["{{baseUrl}}"], "path": ["reglas-precios",""]}
      }
    },
    {
      "name": "Combinaciones - Listar / Crear",
      "request": {
        "method": "GET",
        "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}],
        "url": {"raw": "{{baseUrl}}/combinaciones-productos/", "host": ["{{baseUrl}}"], "path": ["combinaciones-productos",""]}
      }
    },
    {
      "name": "Precios Articulos - Listar / Crear",
      "request": {
        "method": "GET",
        "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}],
        "url": {"raw": "{{baseUrl}}/precios-articulos/", "host": ["{{baseUrl}}"], "path": ["precios-articulos",""]}
      }
    },
    {
      "name": "Empresas - Listar",
      "request": {
        "method": "GET",
        "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}],
        "url": {"raw": "{{baseUrl}}/empresas/", "host": ["{{baseUrl}}"], "path": ["empresas",""]}
      }
    },
    {
      "name": "Sucursales - Listar",
      "request": {
        "method": "GET",
        "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}],
        "url": {"raw": "{{baseUrl}}/sucursales/", "host": ["{{baseUrl}}"], "path": ["sucursales",""]}
      }
    }
  ]
}
