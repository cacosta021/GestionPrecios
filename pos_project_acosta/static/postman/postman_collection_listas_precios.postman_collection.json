{
  "info": {
    "_postman_id": "0a1b2c3d-4e5f-6789-abcd-ef0123456789",
    "name": "POS - Listas de Precios & Pol√≠ticas",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {"key": "baseUrl", "value": "http://127.0.0.1:8000/api"},
    {"key": "username", "value": "admin"},
    {"key": "password", "value": "password"},
    {"key": "accessToken", "value": ""},
    {"key": "empresa_id", "value": ""},
    {"key": "sucursal_id", "value": ""},
    {"key": "articulo_id", "value": ""}
  ],
  "item": [
    {
      "name": "Auth - Obtener token",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
        },
        "url": {"raw": "{{baseUrl}}/token/", "host": ["{{baseUrl}}"], "path": ["token",""]}
      },
      "response": []
    },
    {
      "name": "Auth - Refresh token",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {"mode": "raw", "raw": "{\n  \"refresh\": \"{{refreshToken}}\"\n}"},
        "url": {"raw": "{{baseUrl}}/token/refresh/", "host": ["{{baseUrl}}"], "path": ["token","refresh",""]}
      }
    },
    {
      "name": "Calcular precio (POST)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{accessToken}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"empresa_id\": \"{{empresa_id}}\",\n  \"sucursal_id\": \"{{sucursal_id}}\",\n  \"articulo_id\": \"{{articulo_id}}\",\n  \"canal\": 1,\n  \"cantidad\": 1,\n  \"monto_pedido\": 0.00\n}"
        },
        "url": {"raw": "{{baseUrl}}/calcular-precio/calcular/", "host": ["{{baseUrl}}"], "path": ["calcular-precio","calcular",""]}
      }
    }
  ]
}
